<Window x:Class="RandotronWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandotronWPF"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        KeyDown="Window_KeyDown"
        x:Name="TitleWindow"
        Title="Randotron" Height="600" Width="800" MinWidth="580" MinHeight="300" Topmost="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBox x:Name="FocusBox" Width="0" Height="0" Margin="0 0 0 0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Label x:Name="label" Content="Randotron" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Corbel" FontSize="30" FontWeight="Bold" Foreground="#FF000000"/>
                </Grid>
                <Grid Grid.Column="1">
                    <StackPanel Orientation="Horizontal" x:Name="StuNumPanel">
                        <TextBox
                        x:Name="NumberTextBox"
                        materialDesign:HintAssist.Foreground="Green"
                        materialDesign:TextFieldAssist.UnderlineBrush="Green"
                        materialDesign:ShadowAssist.ShadowDepth="Depth2"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        VerticalAlignment="Center"
                        Width="200"
                        Margin="10 0 0 0">
                            <materialDesign:HintAssist.Hint>
                                <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                                    <materialDesign:PackIcon Kind="AccountTick" />
                                    <TextBlock Margin="2 0 0 0" FontFamily="Consolas, 思源黑体 CN">学生人数</TextBlock>
                                </StackPanel>
                            </materialDesign:HintAssist.Hint>
                        </TextBox>
                        <Button
                        Style="{DynamicResource MaterialDesignFloatingActionMiniButton}"
                        materialDesign:ShadowAssist.ShadowDepth="Depth2"
                        HorizontalAlignment="Center"
                        ToolTip="MaterialDesignFloatingActionMiniButton"
                        Click="NumberModeConfirmed"
                        Margin="10,0,0,0" Background="#DD000000" BorderBrush="#DD000000" Height="30" Width="30">
                            <materialDesign:PackIcon
                                Kind="CheckBold"
                                Height="20"
                                Width="20" />
                        </Button>
                    </StackPanel>
                    <Button
                    x:Name="FileBtn"
                    Style="{DynamicResource MaterialDesignFloatingActionMiniButton}"
                    materialDesign:ShadowAssist.ShadowDepth="Depth2"
                    HorizontalAlignment="Left"
                    ToolTip="MaterialDesignFloatingActionMiniButton"
                    Click="FileModeConfirmed"
                    Margin="10 0 0 0" Background="#DD000000" BorderBrush="#DD000000" Height="30" Width="30">
                        <materialDesign:PackIcon
                            Kind="FileDocumentBoxPlusOutline"
                            Height="20"
                            Width="20" />
                    </Button>
                </Grid>
                <Grid Grid.Column="2">
                    <ComboBox
                    x:Name="ModeSelector"
                    Width="40"
                    Margin="0 0 10 0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    SelectionChanged="ModeSelectorChange">
                        <Label>学号</Label>
                        <Label>人名</Label>
                        <Label>照片</Label>
                    </ComboBox>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1" x:Name="StuGrid">
            <Grid Margin="0,-40,-0.444,-0.111">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid Margin="0 0 0 10" Grid.Column="0" >
                    <Label x:Name="PreText" FontFamily="Consolas, 思源黑体 CN" FontSize="50" FontWeight="ExtraBold" Foreground="Gray" 
                           HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 25"/>
                    <Button 
                    Style="{StaticResource MaterialDesignIconForegroundButton}"
                    ToolTip="MaterialDesignIconForegroundButton"
                    VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10 0 0 10"
                    Click="PreBtnClicked"
                    Height="40" Width="40">
                        <materialDesign:PackIcon
                        Kind="ArrowLeft" Height="30" Width="30" Foreground="#FF787878" />
                    </Button>
                </Grid>
                <Grid Margin="0,0,0,10" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label x:Name="CurText" FontFamily="Consolas, 思源黑体 CN" FontSize="80" FontWeight="ExtraBold" Foreground="Black"
                           Margin="0 0 0 25"></Label>
                </Grid>
                <Grid Margin="0,0,0,10" Grid.Column="2">
                    <Button 
                    Style="{StaticResource MaterialDesignIconForegroundButton}"
                    ToolTip="MaterialDesignIconForegroundButton"
                    VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0 0 10 10"
                    Click="NxtBtnClicked"
                    Height="40" Width="40">
                        <materialDesign:PackIcon
                        Kind="ArrowRight" Height="30" Width="30" Foreground="#FF787878" />
                    </Button>
                    <Label x:Name="NxtText" FontFamily="Consolas, 思源黑体 CN" FontSize="50" FontWeight="ExtraBold" Foreground="Gray"
                           HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="0 0 0 25"></Label>
                </Grid>
            </Grid>
            <ProgressBar x:Name="ProgressBar" VerticalAlignment="Bottom" Height="10" Value="0" Foreground="#FF151515" BorderBrush="#FF474747" Background="#FF606060"/>
            <materialDesign:Snackbar
                IsActive="False"
                x:Name="PopUpBar">
                <materialDesign:SnackbarMessage
                    x:Name="PopUpBarMessage"
                    ActionClick="PopUpBarConfirmed"
                    Content=""
                    ActionContent="确认" />
            </materialDesign:Snackbar>
        </Grid>
    </Grid>
</Window>
